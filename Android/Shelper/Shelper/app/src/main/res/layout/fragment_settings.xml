<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vottakvot.nevskiy.knuckles.fragments.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/settings_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textStyle="bold"
        android:text="Settings" />

    <View
        android:id="@+id/divider1"
        style="@style/Divider"
        android:layout_alignBottom="@+id/settings_headline"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textPauses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_below="@+id/divider1"
        android:text="Паузы" />

    <View
        android:id="@+id/divider"
        style="@style/Divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textPauses"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText"
        android:text="Пауза между повтором заданий:"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText2"
        android:text="Пауза между сменой заданий"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="мин."
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText2"
        android:layout_alignParentRight="true"
        android:text="сек."
        android:textSize="15sp" />
    <View
        android:id="@+id/divider2"
        style="@style/Divider"
        android:layout_alignBottom="@+id/editText2"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/textAuto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:layout_below="@+id/divider2"
        android:text="Автозапуск" />
    <View
        android:id="@+id/divider3"
        style="@style/Divider"
        android:layout_alignBottom="@+id/textAuto"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider3"
        android:layout_alignBaseline="@+id/switch1"
        android:text="Начать выполнение при запуске" />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignBaseline="@+id/switch2"
        android:text="Работать постоянно" />
    <View
        android:id="@+id/divider4"
        style="@style/Divider"
        android:layout_below="@+id/switch2"
        android:layout_alignParentStart="true" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <Switch
        android:id="@+id/switch2"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_toLeftOf="@+id/textView4"
        android:layout_toStartOf="@+id/textView4"
        android:ems="10"
        android:inputType="numberDecimal"
        android:maxLength="3"
        android:textSize="14sp" />
    <EditText
        android:id="@+id/editText2"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_toLeftOf="@id/textView4"
        android:maxLength="2"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="14sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="Сбросить изменения" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        android:text="Добавить новое задание" />

    <Button
        android:id="@+id/buttonSynch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="Синхронизировать" />


</RelativeLayout>
